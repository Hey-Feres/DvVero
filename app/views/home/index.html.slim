- @sections.each do |section|
	- if section.desktop_image.attached?
		section style="background: url(#{url_for(section.desktop_image)}); height: 35rem"
			h2 style="color: #{section.title_color}; text-align: #{section.title_alignment}"= section.title
			p style="color: #{section.content_color}; text-align: #{section.content_alignment}"= section.content
	- else
		section style="background-color: #{section.background_color}; height: 35rem"
			h2 style="color: #{section.title_color}; text-align: #{section.title_alignment}"= section.title
			p style="color: #{section.content_color}; text-align: #{section.content_alignment}"= section.content


css:
	body {
		margin: 0;
		padding: 0;
		font-family: sans-serif;
	}

	section {
		padding: 2%;
	}

	section h2 {
		font-size: 5rem;
		margin: 0;
		width: 100%;
	}

	section p {
		font-size: 2rem;
		margin: 0;
		margin-top: 2%;
		width: 100%;
	}
