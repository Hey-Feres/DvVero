- @sections.each do |section|
	- if section.desktop_image.attached?
		section style="background-image: url(#{url_for(section.desktop_image)}), linear-gradient(rgba(#{section.background_filter_color.to_rgb[0]}, #{section.background_filter_color.to_rgb[1]}, #{section.background_filter_color.to_rgb[2]}, 0.7), rgba(#{section.background_filter_color.to_rgb[0]}, #{section.background_filter_color.to_rgb[1]}, #{section.background_filter_color.to_rgb[2]}, 0.7)); height: 35rem; background-size: cover"
			h2 style="color: #{section.title_color}; text-align: #{section.title_alignment}"= section.title
			p style="color: #{section.content_color}; text-align: #{section.content_alignment}"= section.content
	- else
		section style="background-color: #{section.background_color}; height: 35rem"
			h2 style="color: #{section.title_color}; text-align: #{section.title_alignment}"= section.title
			p style="color: #{section.content_color}; text-align: #{section.content_alignment}"= section.content


css:
	body {
		margin: 0;
		padding: 0;
		font-family: sans-serif;
	}

	section {
		padding: 2%;
		background-blend-mode: overlay;
		border-bottom: 3px solid #000;
	}

	section h2 {
		font-size: 5rem;
		margin: 2% 17.5%;
		width: 100%;
	}

	section p {
		font-size: 2rem;
		margin: 2% 17.5%;
		width: 65%;
	}

	@media (min-width:320px) {
		/* smartphones, portrait iPhone, portrait 480x320 phones (Android) */
		section h2 {
			font-size: 3rem;
			margin: 2% 0;
			width: 100%;
		}

		section p {
			font-size: 1.5rem;
			margin: 2% 2%;
			width: 85%;
		}
	}

	@media (min-width:480px) {
		/* smartphones, Android phones, landscape iPhone */
		section h2 {
			font-size: 3rem;
			margin: 2% 0;
			width: 100%;
		}

		section p {
			font-size: 1.5rem;
			margin: 2% 2%;
			width: 85%;
		}
	}